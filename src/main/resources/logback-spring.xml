<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property name="LOGS" value="./logs"/>
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%date{dd.MM.yyyy HH:mm:ss:SSS}) %highlight(%-5level) [%blue(%-20.20t{1})] %yellow(%-65.65logger{58}): %msg%n%throwable{2}
            </Pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="Console"/>
    </root>

    <logger name="no.esa" level="info" additivity="false">
        <appender-ref ref="Console"/>
    </logger>
</configuration>
